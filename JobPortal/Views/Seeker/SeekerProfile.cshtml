@model JobPortal.DataAccessLayer.Entities.SeekerProfile
@{
    Layout = "~/Views/Shared/_LayoutJobSeeker.cshtml";
}

<div class = "container mt-3">
    <div class = "row">
       <div class = "col-9 bg-light p-3 ">
           <div class = "row">
               <div class = "col-3">
                   <img src = "@Model.ImageUrl" height="110px" width="110px"/>
               </div>
               
           </div>
           <div class = "row mt-3">
               <h5>Skills</h5>
              <div>
                   <ul>
                    @for(int i = 0; i < ViewBag.FormatedSkills.Length; i++)
                     {
                        <li>@ViewBag.FormatedSkills[i]</li>
                     }
                </ul>
              </div>
           </div>
            <div class = "row">
               <h5>Education</h5>
                <p>@Model.Education</p>
           </div>
            <div class = "row">
               <h5>Achievement</h5>
               <div>
                   <ul>
                   @for(int i = 0; i <ViewBag.FormatedAchievements.Length; i++)
                    {
                        <li>@ViewBag.FormatedAchievements[i]</li>
                    }
                </ul>
               </div>
           </div>
            <div class = "row ">
               <h5 class = "">Portfolio Link</h5>
                <p><a href = " @Model.PortfolioLink">My Portfolio Link</a></p>
           </div>
           <div class = "row">
               <h5>Github Link</h5>
                <a href = " @Model.GitHubLink">My Github Link</a>
           </div>
       </div>
        <div class = "col-3">
            @Html.ActionLink("update profile","UpdateProfile","Seeker",new {} ,new { @class = "btn btn-secondary" })
       </div>
    </div>
   
</div>



